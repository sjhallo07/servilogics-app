# ========================================
# MONITORING & ANALYTICS
# ========================================

# Grafana
GRAFANA_ADMIN_PASSWORD=ChangeThisGrafanaPassword!

# Sentry
VITE_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/123456

# Analytics
VITE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ========================================
# PAYMENT PROCESSING
# ========================================

# Stripe
VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxx

# PayPal
VITE_PAYPAL_CLIENT_ID=AYxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# MOBILE APP BUILD (Android)
# ========================================

# Build Configuration
BUILD_TYPE=debug
APP_NAME="ECME Mobile"
APP_VERSION=1.0.0
APP_VERSION_CODE=1
APP_ID=com.ecme.mobile

# Android Signing (Release builds only)
ANDROID_KEYSTORE_PASSWORD=your-keystore-password
ANDROID_KEY_ALIAS=your-key-alias
ANDROID_KEY_PASSWORD=your-key-password

# API Configuration for Mobile
API_BASE_URL=https://servilogics-app.vercel.app

# APK Upload (Optional)
APK_UPLOAD_URL=https://your-deploy-server.com/api
APK_UPLOAD_TOKEN=Bearer xxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# THIRD-PARTY SERVICES
# ========================================

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123

# MinIO (S3 Compatible)
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=password123

# Traefik
SSL_EMAIL=admin@ecme.com
TRAEFIK_AUTH_CREDENTIALS=admin:$$apr1$$xxxxxxxx$$xxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# PERFORMANCE TUNING
# ========================================

# Node.js
NODE_OPTIONS=--max-old-space-size=4096

# Java/Gradle
JAVA_OPTS=-Xmx4g -Xms2g
GRADLE_OPTS=-Dorg.gradle.daemon=false -Dorg.gradle.parallel=true

# ========================================
# FEATURE FLAGS
# ========================================

ENABLE_AI_FEATURES=true
ENABLE_REALTIME_UPDATES=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_CHATBOT=true
ENABLE_ANALYTICS=true
