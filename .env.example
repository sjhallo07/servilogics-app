# ========================================
# APPLICATION CONFIGURATION
# ========================================

# General
APP_NAME=ECME Platform
APP_VERSION=1.0.0
NODE_ENV=production

# ========================================
# DATABASE & CACHE
# ========================================

# PostgreSQL
